{
  "name": "@drikawa/financefy-api",
  "version": "0.1.0",
  "description": "Financefy API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "npm run clean && tsc",
    "compile": "npm run build && node -r dotenv/config dist/index.js",
    "lint": "eslint --ignore-pattern libs-polyfills src/**/*.ts",
    "test": "npm run build && jest",
    "test:watch": "npm run build && jest --watch",
    "test:coverage": "npm run build && jest --coverage --colors",
    "dev": "npm run build && nodemon -- -r dotenv/config dist/index.js",
    "dev:watch": "nodemon -e ts --exec \"npm run compile\"",
    "start": "node -r dotenv/config dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:DriKawaCO/financefy-api.git"
  },
  "keywords": [
    "node-api"
  ],
  "author": "@drikawa",
  "contributors": [
    "@alanaugustodias",
    "@kawassaki"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DriKawaCO/financefy-api/issues"
  },
  "homepage": "https://github.com/DriKawaCO/financefy-api/blob/main/README.md",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.10.1",
    "@babel/preset-env": "^7.10.3",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.0",
    "@types/mongoose": "^5.10.3",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "babel-jest": "^26.0.1",
    "eslint": "^7.3.0",
    "eslint-plugin-jest": "^24.1.3 ",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^26.0.1",
    "jest-environment-node": "^26.6.2",
    "mongodb-memory-server": "^6.9.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "typescript": "4.1.3"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.11.15",
    "reflect-metadata": "^0.1.13"
  }
}
